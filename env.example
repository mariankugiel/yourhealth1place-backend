# Database Configuration (Internal PostgreSQL for linkage and non-sensitive data)
DATABASE_URL=postgresql://username:password@localhost:5432/yourhealth1place_db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/yourhealth1place_test_db

# Supabase Configuration (Auth, Personal Info, Lightweight Metadata)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AWS Configuration (Sensitive Health Data & Document Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=yourhealth1place-documents
AWS_ATHENA_DATABASE=yourhealth1place_analytics
AWS_ATHENA_WORKGROUP=primary
SQS_EMAIL_QUEUE_URL=your-sqs-email-queue-url
LAMBDA_API_TOKEN=your-lambda-webhook-token

# Akeyless Configuration (Encryption Keys)
AKEYLESS_ACCESS_ID=your-akeyless-access-id
AKEYLESS_ACCESS_KEY=your-akeyless-access-key
AKEYLESS_URL=https://api.akeyless.io

# Security Configuration
SECRET_KEY=your-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Configuration
DEBUG=True
ENVIRONMENT=development

# CORS Configuration
# Single URL for production frontend (localhost is automatically included for development)
# When allow_credentials=True, you cannot use "*" - must specify exact origins
# Example: CORS_ORIGIN=https://patient-web-app-mocha.vercel.app
CORS_ORIGIN=https://patient-web-app-mocha.vercel.app

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=YourHealth1Place API
VERSION=1.0.0 

# Acuity Scheduling API Configuration
ACUITY_USER_ID=your-acuity-user-id
ACUITY_API_KEY=your-acuity-api-key

# Daily.co Video API Configuration
DAILY_API_KEY=your-daily-api-key
DAILY_API_URL=https://api.daily.co/v1
DAILY_DOMAIN=your-domain.daily.co

# Supabase Doctor Project Configuration (Separate from Patient Project)
SUPABASE_DOCTOR_URL=https://your-doctor-project.supabase.co
SUPABASE_DOCTOR_ANON_KEY=your-doctor-supabase-anon-key
SUPABASE_DOCTOR_SERVICE_ROLE_KEY=your-doctor-supabase-service-role-key 

# Thryve Integration Configuration
THRYVE_WEBHOOK_ENABLED=True
THRYVE_WEBHOOK_URL=https://api.yourhealth1place.eu/api/v1/webhooks/thryve/data-push
THRYVE_WEBHOOK_HMAC_SECRET=your-hmac-secret-here
THRYVE_API_BASE_URL=https://api.und-gesund.de
THRYVE_API_WIDGET_URL=https://api.thryve.de
THRYVE_SERVICE_BASE_URL=https://service2.und-gesund.de
THRYVE_WEB_AUTH_USERNAME=your-thryve-username
THRYVE_WEB_AUTH_PASSWORD=your-thryve-password
THRYVE_APP_AUTHORIZATION=your-thryve-app-authorization 